<h1> User Profile </h1>

      <div class="user_profile_name">
        <% if @user.name != nil %>
          <h2><%= "#{@user.name}" %> </h2>
        <% else %>
          <h2><%= "#{@user.email}" %></h2>
        <% end %>
      </div>

      <div class="edit_profile">

          <% if current_user == @user %>
            <%= link_to edit_user_path(@user) %>
              <div class="button_sm">
                <i class="fa fa-pencil fa-lg"></i>
                <p id="edit_profile_text">edit profile</p>
              </div>
            <%end %>

      </div>


      <div class="user_profile_bio">

        <h5>BIO</h5>
        <% if @user.bio != nil %>
        <%= "#{@user.bio}" %>
        <% else %>
        <p> bio: empty </p>
        <% end %>
      </div>
