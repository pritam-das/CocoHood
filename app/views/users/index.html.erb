<h1>Users</h1>

<%= form_tag users_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Address</th>
      <th>Username</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>
