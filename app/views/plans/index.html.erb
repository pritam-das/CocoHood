<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<%= month_calendar do |date| %>
  <%= date %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.start_time %></td>
        <td><%= plan.end_time %></td>
        <td><%= link_to 'Examine', plan %></td>
        <td><%= link_to 'Update', edit_plan_path(plan) %></td>
        <td><%= link_to 'Delete', plan, method: :delete, data: { confirm: 'RIP this event :(?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
